<section class="container py-5">
    <div class="row">
        <div class="col-12 page-title">
            {% comment %} {% render 'breadcrumb-custom', title: page.title %} {% endcomment %}
             {% assign title = 'general.register.text' | t %}
             {% render 'breadcrumb-custom', title: title %}
        </div>
        <div class="col-lg-5">
            <h3>{{ 'general.register.create-account' | t }}</h3>
            <p> {{ 'general.register.subtitle-create-account' | t }}</p>
            {% form 'create_customer' %}
                {{ form.errors | default_errors }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="text" name="customer[first_name]" placeholder="First Name" class="form-control py-3">      
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="text" name="customer[last_name]" placeholder="Last Name" class="form-control py-3">      
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="tel" name="customer[phone]" placeholder="Phone number" class="form-control py-3">      
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="email" name="customer[email]" placeholder="E-mail" class="form-control py-3">
                        <input type="hidden" name="customer[tags]" value="" class="form-control py-3">
                    </div>
                    <div class="col-12 mb-3">
                        <input type="password" name="customer[password]" placeholder="Password" class="form-control py-3">      
                    </div>
                </div>
              
                <div class="submit">
                  <input type="submit" value="{{ 'general.register.create-account' | t }}" class="btn btn-primary">
                </div>
              {% endform %}

              <p class="mt-5">Already have an account? <a class="text-underline" href="{{routes.account_login_url}}">Login</a></p>
        </div>
        <div class="col-lg-7 my-auto">
              <img src="{{ 'ayurvedic-cosmetic-ubtan-face-hair-care-scaled.jpg' | asset_url }}" alt="ayurvedic-cosmetic-ubtan-face-hair-care-scaled.jpg" class="img-fluid">
        </div>
    </div>
</section>
{% schema %}
{
    "name": "main-register",
    "settings": [],
    "presets": [
        {
            "name": "main-register"
        }
    ]
}
{% endschema %}