<section class="container introduce-heritage-tcm space-section">
    <div class="row">
        <div class="col-lg-6 d-flex align-items-stretch mt-3">
            <div class="card">
                <div class="card-body card-border bg-about">
                    <h1 class="card-number-circle text-white bg-tcm-1">1</h1>
                    <div class="mt-lg-5 mx-lg-5">
                        <h2 class="card-title text-white">{{ 'general.index.heritage-text-one' | t }}</h2>
                        <p class=" text-white">{{ 'general.index.heritage-subtext-one' | t }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 d-flex align-items-stretch mt-3">
            <div class="card bg-card">
                <div class="card-body card-border bg-intro-2">
                    <div>
                        <h1 class="card-number-circle text-white bg-tcm-2">2</h1>
                        <h2 class="card-title font-size-20 py-2">{{ 'general.index.heritage-text-two' | t }}</h2>
                        <p class="">{{ 'general.index.heritage-subtext-two' | t }}</p>
                    </div>
                </div>
                <div class="overlay"></div>
            </div>
        </div>
        <div class="col-lg-3 d-flex align-items-stretch mt-3">
            <div class="card bg-card">
                <div class="card-body card-border bg-intro-3">
                    <div>
                        <h1 class="card-number-circle text-white bg-tcm-3">3</h1>
                        <h2 class="card-title font-size-20 py-2">{{ 'general.index.heritage-text-three' | t }}</h2>
                        <p class="">{{ 'general.index.heritage-subtext-three' | t }}</p>
                    </div>
                </div>
                <div class="overlay"></div>
            </div>
        </div>
    </div>
</section>

{% style %}
    .card .bg-about{
        background: url({{  'photo-1583466478015-2dce6bf2f551.jpeg' |  asset_url }});
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .card .bg-about::before {
        content: "";  
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Hitam transparan (50%) */
        z-index: 1; /* Pastikan overlay ada di atas */
    }

    .card .bg-about * {
        position: relative;
        z-index: 2; /* Supaya konten di dalam tetap terlihat */
    }

    .card-body .card-number-circle{
        border-radius: 50%;
        width: 70px;
        height: 70px;
        padding: 7px;
        border: 4px solid #fff;
        color: #666;
        text-align: center;
    }

    .card .bg-tcm-1{
        transition: all 0.3s ease-in-out, all 0.3s ease-in-out;
    }

    .card .bg-tcm-2{
        background: url({{  'photo-1495461199391-8c39ab674295.jpeg' |  asset_url }});
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        transition: all 0.3s ease-in-out, all 0.3s ease-in-out;
    }

    .card:hover .overlay{
        background: rgba(0, 0, 0, 0.5); 
        content: ' ';
        display: block;
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        border-radius: 10px;
    }

    .card:hover .bg-tcm-1, .card:hover .bg-tcm-2, .card:hover .bg-tcm-3{
        transform: scale(1.2);
    }

    .card:hover .bg-intro-2 {
        background-image: url({{  'photo-1495461199391-8c39ab674295.jpeg' |  asset_url }})!important;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .card:hover .bg-intro-2 div {
        position: relative;
        z-index: 1;
    }

    .card:hover .bg-intro-3 {
        background-image: url({{  'premium_photo-1678917827802-721b5f5b4bf0.jpeg' |  asset_url }})!important;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        transition: all 0.3s ease-in-out, all 0.3s ease-in-out;
    }

    .card:hover .bg-intro-3 div {
        position: relative;
        z-index: 1;
    }
    

    .card:hover .bg-intro-2 h2, .card:hover .bg-intro-2 p , .card:hover .bg-intro-3 h2, .card:hover .bg-intro-3 p{
        color: #fff;
    }

    .card .bg-tcm-3{
        background: url({{  'premium_photo-1678917827802-721b5f5b4bf0.jpeg' |  asset_url }});
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
{% endstyle %}

