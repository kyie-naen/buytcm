<section class="container mt-4">
    <div class="row space-section">
        {% for collection in collections %}
            {% if collection.title != 'Best Seller' %}
            <div class="col-md-4 pb-4">
                <a class="no-opacity" href="{{collection.url}}">
                <div class="card bg-card">
                    <div class="img-zoom card-body-top-border-radius">
                        <img loading="lazy" class="img-block" src="{{collection.featured_image |  image_url: grande }}" alt="{{collection.title}}">
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <h5 class="card-title my-auto">{{collection.title}}</h5>
                        {% render 'icon-collection' %}
                    </div>
                </div>
                </a>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-9">
            <h1>{{ 'general.index.heritage-text' | t }}</h1>
            <p>{{ 'general.index.heritage-subtext-1-1' | t }}</p>
            <p>{{ 'general.index.heritage-subtext-1-2' | t }}</p>
            <p>{{ 'general.index.heritage-subtext-1-3' | t }}</p>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "list-collections",
    "settings": [],
    "presets": [
        {
            "name": "list-collections"
        }
    ]
}
{% endschema %}