<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{section.settings.modal-title}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img class="img-fluid" src="{{ 'HeritageMiraclePatches-Front.png' |  asset_url}}" alt="">
        <p class="mt-3">{{section.settings.modal-sub-title}}.</p>
        <div class="countdown-container">
            <div class="countdown">
                <div class="time-box">
                    <span id="days" class="time">00</span>
                    <span class="label">DAYS</span>
                </div>
                <div class="time-box">
                    <span class="time">:</span>
                    <span class="label text-white">D</span>
                </div>
                <div class="time-box">
                    <span id="hours" class="time">00</span>
                    <span class="label">HOURS</span>
                </div>
                <div class="time-box">
                    <span class="time">:</span>
                    <span class="label text-white">D</span>
                </div>
                <div class="time-box">
                    <span id="minutes" class="time">00</span>
                    <span class="label">MINUTES</span>
                </div>
                <div class="time-box">
                    <span class="time">:</span>
                    <span class="label text-white">D</span>
                </div>
                <div class="time-box">
                    <span id="seconds" class="time">00</span>
                    <span class="label">SECONDS</span>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer countdown">
        <a href="{{section.settings.modal-cta-link}}" class="btn btn-primary" style="width: 100%;">Order Now</a>
      </div>
    </div>
  </div>
</div>

<style>
    .countdown-container {
      text-align: center;
    }
    .countdown {
      display: flex;
      gap: .3rem;
      justify-content: center;
      align-items: center;
      width: 300px;
      margin: auto;
    }
    .time {
      font-size: 3rem;
    }
    .label {
      font-size: .8rem;
      color: #555;
    }
    .time-box {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
</style>

<script>
    // Set the target date and time
    const targetDate = new Date("2025-03-17T23:59:59").getTime();

    // Update the countdown every second
    const countdownInterval = setInterval(function () {
      const now = new Date().getTime();
      const timeRemaining = targetDate - now;

      // Calculate days, hours, minutes, and seconds
      const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
      const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

      // Update the countdown elements
      document.getElementById("days").textContent = days.toString().padStart(2, '0');
      document.getElementById("hours").textContent = hours.toString().padStart(2, '0');
      document.getElementById("minutes").textContent = minutes.toString().padStart(2, '0');
      document.getElementById("seconds").textContent = seconds.toString().padStart(2, '0');

      // Stop the countdown when the target date is reached
      if (timeRemaining < 0) {
        clearInterval(countdownInterval);
        document.querySelector(".countdown").innerHTML = "<p>Countdown expired!</p>";
      }
    }, 1000);
</script>

