<!DOCTYPE html>
<html lang="en">
<head>
    {{content_for_header}}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if request.path == routes.all_products_collection_url %}
        <meta name="description" content="Buy Traditional Chinese Medicine (TCM) health supplements and herb products with Heritage formulations to boost and maintain your health.">
        <title>TCM Health Supplements and Herbal Products</title>
    {% else %}
        <meta name="description" content="{{ page_description }}">
        <title>{{ page_title }}</title>
    {% endif %}
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="{{ 'favicon.ico' |  asset_url }}" />
    {% comment %} Google Font {% endcomment %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Theme CSS -->
    {{ 'bootstrap.css' |  asset_url |  stylesheet_tag }}
    {{ 'theme.css' |  asset_url |  stylesheet_tag }}

    {% comment %} slick {% endcomment %}
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-K3JXFZD7');</script>
    <!-- End Google Tag Manager -->

</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K3JXFZD7"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    {% section 'main-nav' %}
    <main id="main" role="main">
        {{content_for_layout}}
    </main>
    {% section 'footer' %}
    {% comment %} {% if request.path == routes.root_url or request.path == routes.all_products_collection_url or request.path contains '/products/' %}
        {% section 'main-modal' %}
    {% endif %} {% endcomment %}
    {% section 'footer-copyright' %}
    {% section 'off-canvas' %}
    {% section 'back-to-top' %}
    {% comment %} <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> {% endcomment %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" defer></script>
    {{ 'theme.js' | asset_url | script_tag }}
</body>
</html>